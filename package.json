{
  "name": "@zthun/spellcraft",
  "version": "0.0.0",
  "description": "Style checks with tools for web projects using common rules.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/spellcraft"
  },
  "private": true,
  "scripts": {
    "clean": "rimraf 'packages/**/dist' 'packages/**/docs' 'reports' 'coverage' 'packages/**/*.tgz'",
    "test": "lerna run test",
    "lint": "lint-janitor",
    "build": "lerna run build",
    "make": "yarn clean && yarn lint && yarn test && yarn build && yarn doc",
    "postinstall": "husky install"
  },
  "author": "Anthony Bonta",
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@zthun/lint-janitor": "^13.0.2",
    "@zthun/lint-janitor-config": "^13.0.2",
    "husky": "^8.0.2",
    "lerna": "^6.0.3",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.3"
  },
  "workspaces": [
    "packages/*"
  ]
}
